%h1 gif<span>-</span>a<span>-</span>tweet
  
.form
  .formy
    = form_tag home_index_url , method: :get do
      = text_field_tag :user, nil, :placeholder =>"twitter handle"
      %br
      = submit_tag "gif it", :class => "submit"

.wrapping
  .results
    -if @user
      %h2= "@#{@user}:#{@tweet.text}"
      -if !@gif_url
        %p 
          your tweet wasn't gif-worthy. 
          try again.
      -else
        = image_tag @gif_url, height:'300', width: '400'
        %br
        = @giphy_search
        %br
      %br
      -@keywords.each do  |keyword|
        = "|#{keyword}|"

%br 
